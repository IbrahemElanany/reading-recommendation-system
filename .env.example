# Application Configuration
NODE_ENV=development
APP_PORT=3000

# Database Configuration
DATABASE_URL=postgresql://<USERNAME>:<PASSWORD>@<HOST>:<PORT>/<DB_NAME>?schema=public
# Example: postgresql://postgres:postgres@localhost:5432/reading_recommendation?schema=public

# Authentication & Security
JWT_SECRET=<YOUR_JWT_SECRET>
JWT_EXPIRES_IN=1h
PASSWORD_SALT_ROUNDS=10

# Recommendation Settings
TOP_BOOKS_DEFAULT_LIMIT=5

# Caching (Redis)
CACHE_ENABLED=true
REDIS_HOST=localhost
REDIS_PORT=6379
CACHE_TTL_SECONDS=60
TOP_BOOKS_CACHE_TTL=300
CACHE_MAX_ITEMS=100

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_DURATION_SECONDS=60
